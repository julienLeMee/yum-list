<main class="pt-16 pb-28 lg:pl-72">
  <div class="px-4 sm:px-6 lg:px-8">

    <h1 class="mt-4"><%= @friend.email %>'s Restaurant List</h1>

    <% if @restaurants.any? %>
    <ul>
        <% @restaurants.each do |restaurant| %>
        <li class="my-4"><%= restaurant.name %></li>
        <% end %>
    </ul>
    <% else %>
    <p>No restaurants found for <%= @friend.email %>.</p>
    <% end %>
  </div>
</main>
