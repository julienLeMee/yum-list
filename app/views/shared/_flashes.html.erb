<% if notice %>
  <div class="rounded-full px-3 py-1 text-sm leading-6 text-[--color--text--primary] ring-1 ring-white/10 hover:ring-white/20 absolute top-5 left-5" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <%= notice %>
  </div>
<% end %>
