<div class="container mx-auto">
  <div class="inner">
    <span class="title"><%= @welcome_message %></span>
    <div>
      <% if user_signed_in? %>
        <%= link_to "Se déconnecter", logout_path, method: :get, data: { confirm: "Êtes-vous sûr de vouloir vous déconnecter ?" }, class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 hover:text-white shadow-sm ring-2 ring-inset ring-indigo-600 hover:bg-indigo-600 transition duration-200 ease-in-out mt-8" %>
        <%= link_to "Voir les restaurants", restaurants_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:cursor-pointer transition duration-200 ease-in-out mt-8" %>
        <%= link_to "Ajouter un restaurant", new_restaurant_path, class: "rounded-md bg-indigo-50 px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100 transition duration-200 ease-in-out mt-8" %>
      <% else %>
        <%= link_to "Se connecter", new_user_session_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:cursor-pointer transition duration-200 ease-in-out mt-8" %>
      <% end %>
    </div>
  </div>
</div>

