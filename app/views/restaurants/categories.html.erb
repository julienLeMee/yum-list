<main class="pt-16 pb-28 lg:pl-72">
  <div class="px-4 sm:px-6 lg:px-8">

    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-6 text-xl font-semibold leading-9 tracking-tight text-[#333]">Categories</h2>
    </div>

    <div class="grid grid-cols-2 gap-3 mt-4">
    <% @categories.each do |category| %>
        <div class="categories__cards [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.2)] flex flex-col-reverse justify-between border gap-2 relative overflow-hidden p-4 text-base rounded-xl font-light text-white">
            <%= link_to category, restaurants_path(query: category) %>
            <div>
            <% case category %>
            <% when "Pizza" %>
